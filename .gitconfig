[user]
	email = nicolo.traini@oncode.it
	name = Nicolo Traini
[core]
	editor = nvim
[alias]
	st = status
	br = branch
	a = add
	r = reset
	cl = clone
	ci = commit
	cm = commit -m
	cam = commit -am
	ls = log --pretty=format:%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn] --decorate
	co = checkout
	lg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)—  %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
	lgo = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)—  %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
	ldiff = diff HEAD^ HEAD
	cdiff = diff --cached
	nb = switch -c
	sq = "!f() { git rebase -i HEAD~$1; }; f"
	alias = ! git config --get-regexp ^alias\\. | sed -e s/^alias\\.// -e s/\\ /\\ =\\ /
[pull]
	ff = only
